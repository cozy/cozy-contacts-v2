nav
    ul
        margin 0
        list-style-type none

    li
        display inline-block

    &.active [role=tab]
        background-color: #EEE

    [role=tab]
        margin 0 5px
        padding 0 10px
        border-radius 5px 5px 0 0
        font 24px/40px 'Maven Pro', sans-serif
        cursor pointer

        &[aria-selected=true]
            border 1px solid #ddd
            border-bottom none
            border-radius 4px 4px 0 0
            background-color #eee


        &:hover
            background-color: orange + 40%

