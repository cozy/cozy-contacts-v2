*
    box-sizing border-box

avatar(size)
    @extend $content-center

    width         em(size)
    height        em(size)
    right-spaced  .5em
    border-radius 50%


[role=application]
    @extend $app-2panes-toolbar

    &[aria-busy=true]::before
        position fixed
        top 10vh
        left 50vw
        margin-left -18px
        @extend $icon-spinner-grey
        @extend $icon-36


[role=contentinfo]
    dl
    dd
        reset()


// TODO: move those defs to cozy-ui
[role=alertdialog]
    @extend $dialog

    [role=contentinfo]
        flex-basis em(420px)
        box-sizing border-box
        padded 30px

        transform translateY(calc((50vh + 55%) * -1))
        transition transform 400ms ease-out

        background-color white
        border em(1px) solid grey-01
        border-radius em(5px)
        box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

    &[aria-busy=true] [role=contentinfo]
        transform translateY(-50%)

    h2
        top-spaced 0

    p
        bottom-spaced em(30px)

    .actions
        display flex
        flex-direction row-reverse

        li
            flex 1
            margin-right 10px

            &:first-child
                margin-right 0

        button
            height 100%
            width 100%



[aria-haspopup=true]
    position relative

    > :nth-child(1)
        cursor: pointer

    > :nth-child(2)
        z-index 1
        position absolute
        padding em(8px) 0
        min-width 100%

    &[data-position*=top] > :nth-child(2)
        bottom 100%
    &[data-position*=bottom] > :nth-child(2)
        top 100%
    &[data-position*=left] > :nth-child(2)
        left 0
    &[data-position*=right] > :nth-child(2)
        right 0

    &[aria-expanded=false]
        > :nth-child(2)
            hide()
