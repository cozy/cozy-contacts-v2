.modal-header= t("import vcard")
.modal-body
    .control-group
        label.control-label(for="vcfupload")= t("choose vcard file")
        .controls
            input#vcfupload(type="file")
            span.help-inline
        .infos
            span.loading= t("loading import preview")
            span.progress
.modal-footer
    a#cancel-btn(href=backUrl).minor-button= t("cancel")
    a#confirm-btn.button.disabled= t("import")
