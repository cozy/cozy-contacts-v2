.settings

    &[role=dialog] [role=contentinfo]
        flex-direction column
        flex-basis 30em

        box-sizing border-box
        padding 2em

        .group
            bottom-spaced em(30px)


    nav ul
        display flex

        li
            flex 1
            horizontally-spaced .5em

            &:first-child
                margin-left 0
            &:last-child
                margin-right 0

        button
            display block
            width 100%
            vertically-padded 1em

        [type=file]
            hide()

        [disabled]
            opacity .5


    img
        display block
        vertically-spaced em(10px)


    select
        cursor    pointer
        display   block
        width     100%
        height    46px
        font-size 1em


    .feedback
        display     flex
        align-items center
        top-spaced  1em

        &:empty
            hide()

        &.error
            @extends $error

        progress
            @extends $progress
            flex 1
            margin-right 1em
