{
  "name": "cozy-contacts",
  "version": "2.1.14",
  "author": "Cozy Cloud <contact@cozycloud.cc> (https://cozy.io/)",
  "license": "AGPL-3.0",
  "description": "A cozy application to manage your contacts.",
  "engines": [
    "node >= 0.10.x"
  ],
  "main": "build/server.js",
  "dependencies": {
    "compression": "1.6.0",
    "cozy-realtime-adapter": "1.0.1",
    "cozy-vcard": "0.2.17",
    "form-data": "0.2.0",
    "jade": "1.11.0",
    "multiparty": "4.1.2",
    "printit": "0.1.15",

    "backbone": "1.2.3",
    "backbone.marionette": "2.4.4",
    "backbone.projections": "1.0.0",
    "backbone.subroute": "0.4.6",
    "cozy-realtime-adapter": "1.0.1"
  },
  "devDependencies": {
    "bower": "1.7.2",
    "brunch": "1.8.5",
    "chai": "1.5.0",
    "coffee-script": "1.10.0",
    "coffeelint": "1.14.2",
    "cozy-fixtures": "^1.1.3",
    "mocha": "2.3.4",
    "node-inspector": "0.12.5",
    "nodemon": "1.8.1",
    "npm-run-all": "1.4.0",
    "request-json": "0.5.4",
    "sinon": "1.6.0",

    "autoprefixer": "6.3.1",
    "browser-sync-brunch": "0.0.9",
    "coffee-script-brunch": "1.8.3",
    "coffeelint-brunch": "1.7.1",
    "cozy-ui": "0.1.7",
    "css-brunch": "1.7.0",
    "css-mqpacker": "4.0.0",
    "csswring": "4.2.1",
    "jade-brunch": "1.8.2",
    "javascript-brunch": "1.8.0",
    "json-brunch": "1.5.4",
    "postcss-brunch": "0.5.0",
    "stylus-brunch": "1.8.1",
    "uglify-js-brunch": "1.7.8"
  },

  "scripts": {
    "lint": "npm-run-all 'lint:*'",
    "lint:coffeelint": "coffeelint --file coffeelint.json --quiet ./app/**/*.coffee",

    "clean": "rm -rf build",

    "tx": "tx pull --all || true",

    "ensure:client": "npm update --quiet && bower install --quiet",

    "prebuild": "npm-run-all clean tx lint",
    "prebuild:client": "npm run ensure:client",
    "postbuild": "npm-run-all --parallel copy:*",
    "build:client": "brunch build --production",
    "build": "npm-run-all --parallel 'build:*'",

    "test:client": "env NODE_PATH=\"./client/app:$NODE_PATH\" mocha client/test --compilers coffee:coffee-script/register --ui bdd --colors",
    "test:build": "env USE_JS=true npm run test",
    "test": "npm run test:client",

    "fixtures:generate": "cozy-fixtures load -g -l -n 1000 client/test/fixtures/contacts-model.json",
    "fixtures": "npm-run-all 'fixtures:*'",

    "prewatch:client": "npm run ensure:client",
    "watch:inspector": "node-inspector",
    "watch:client": "brunch watch",
    "watch": "npm-run-all --parallel 'watch:*'",

    "start": "cozy-dev proxify http://localhost:9104"
  },
  "repository": "https://github.com/cozy/cozy-contacts",
  "readmeFilename": "README.md",
  "cozy-permissions": {
    "Contact": {
      "description": "Create and edit your contacts."
    },
    "CozyInstance": {
      "description": "Read language setting"
    },
    "ContactConfig": {
      "description": "Store your settings for contacts"
    },
    "Tag": {
      "description": "Create new tags and change their color"
    },
    "WebDAVAccount": {
      "description": "Store webDAV password and sync informations"
    }
  }
}
