.drawer
    display flex
    padded  10px, 20px

    background-color grey-01
    border-right     1px solid grey-03

    @media (max-width: (360/16)rem)
        display none


    [class^=tool-]
        vertically-spaced 10px


    .tools
        flex           1
        display        flex
        flex-direction column

        .tool-labels
            flex 1
            overflow-y auto

        legend
        button
            display    block
            width      100%

            text-align left

            font-weight bold

    [role=button]
        display block
        width 100%
        bottom-spaced .5em

    .tool-labels
        vertically-spaced()
        overflow hidden

        fieldset
            height 100%

        legend
            color          grey-05
            font-size      14px
            text-transform uppercase

        label
            display           flex
            align-items       center
            vertically-spaced .5em
            text-transform    capitalize

        input
            hide()
